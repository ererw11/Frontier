<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/widget_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_large"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_left_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"/>

            <TextView
                android:id="@+id/widget_subheader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="@string/most_recent_entries"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/widget_right_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/widget_fill_up_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_fill_up_location_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="@string/touch_here_to_create_a_fill_up"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_medium"/>

                <TextView
                    android:id="@+id/widget_fill_up_date_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textSize="@dimen/text_size_small"
                    tools:text="Fill Up Date"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_weight="1"
                android:gravity="center_vertical|end">

                <TextView
                    android:id="@+id/widget_fill_up_total_cost_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no_price_yet"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_medium"
                    tools:text="$24.56"/>

                <ImageView
                    android:id="@+id/widget_fill_up_logo_list_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/fill_up_image"
                    android:paddingStart="@dimen/padding_medium"
                    android:src="@drawable/ic_local_gas_station_white_48dp"
                    android:tint="@color/colorAccentDark"
                    tools:ignore="RtlSymmetry"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_expense_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_expense_item_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:maxLines="2"
                    android:text="@string/touch_here_to_create_an_expense"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_medium"/>

                <TextView
                    android:id="@+id/widget_expense_category_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textSize="@dimen/text_size_small"
                    tools:text="Category"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_weight="1"
                android:gravity="center_vertical|end">

                <TextView
                    android:id="@+id/widget_expense_price_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no_price_yet"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_medium"
                    tools:text="$12.34"/>

                <ImageView
                    android:id="@+id/widget_expense_image_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/category_image"
                    android:paddingStart="@dimen/padding_medium"
                    android:src="@drawable/ic_attach_money_white_48dp"
                    android:tint="@color/colorAccentDark"
                    tools:ignore="RtlSymmetry"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>